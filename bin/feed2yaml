#!/usr/bin/env ruby

begin
  require 'feed_yamlizer'
rescue LoadError
  require 'rubygems'
  require 'feed_yamlizer'
end
require 'open-uri'

# for testing
def print_text(res)
  res[:items].each {|x| 
    puts '-' * 30
    puts x[:title]
    puts
    puts x[:content][:text]
  }
end

result = if STDIN.tty?
           FeedYamlizer.process_url ARGV.first
         else
           FeedYamlizer.process_xml STDIN.read
         end

if ENV['TEST'] 
  print_text result
else
  puts result.to_yaml
end
